<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.multi.springBoot.test.mapper.TestMapper">
    <resultMap id="baseMap" type="com.example.demo.multi.springBoot.test.entity.Test">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
    </resultMap>
    <insert id="insert" parameterType="com.example.demo.multi.springBoot.test.entity.Test">
        INSERT INTO test(content) VALUES(#{content})
    </insert>

    <select id="selectById" resultMap="baseMap">
        select id, content from test a where a.id = #{id}
    </select>
</mapper>